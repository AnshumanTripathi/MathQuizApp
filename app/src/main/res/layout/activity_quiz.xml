<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.anshumantripathi.mathquizapp.QuizActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/num1"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="1"
                android:tag="1"
                android:textColor="@android:color/background_light"
                android:onClick="setValue"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/num2"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="2"
                android:tag="2"
                android:textColor="@android:color/background_light"
                android:onClick="setValue"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/num3"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="3"
                android:tag="3"
                android:textColor="@android:color/background_light"
                android:onClick="setValue" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/num4"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="4"
                android:tag="4"
                android:textColor="@android:color/background_light"
                android:onClick="setValue"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/num5"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="5"
                android:tag="5"
                android:textColor="@android:color/background_light"
                android:onClick="setValue"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/num6"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="6"
                android:tag="6"
                android:textColor="@android:color/background_light"
                android:onClick="setValue"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/num7"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="7"
                android:tag="7"
                android:textColor="@android:color/background_light"
                android:onClick="setValue"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/num8"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="8"
                android:tag="8"
                android:textColor="@android:color/background_light"
                android:onClick="setValue"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/num9"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="9"
                android:tag="9"
                android:textColor="@android:color/background_light"
                android:onClick="setValue"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/clear"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="@string/clear"
                android:tag="clear"
                android:textColor="@android:color/background_light" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/num0"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="@string/defaultNum"
                android:tag="@string/defaultNum"
                android:textColor="@android:color/background_light"
                android:onClick="setValue"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:id="@+id/enter"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/ripple_effect"
                android:elevation="24dp"
                android:text="@string/submit"
                android:tag="enter"
                android:textColor="@android:color/background_light" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2" />

        </LinearLayout>
    </GridLayout>

    <TextView
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/numText2"
        android:layout_toStartOf="@+id/numText2"
        android:layout_marginEnd="14dp"
        android:id="@+id/operation"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/numText1"
        android:layout_alignParentStart="true"
        android:id="@+id/qNumber"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeText"
        android:layout_toEndOf="@+id/timeText"
        android:layout_marginLeft="10px"
        android:id="@+id/timer" />

    <TextView
        android:text="@string/defaultNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numText2"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/numText1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/defaultNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numText1"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/operation" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/quizToolbar"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:layout_above="@+id/qNumber"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/line"
        android:text="@string/line"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/operation"
        android:layout_centerHorizontal="true"
        app:popupTheme="@style/Theme.Design.NoActionBar"
        android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeText"
        android:text="@string/timeLeft"
        android:layout_below="@+id/answer"
        android:layout_toEndOf="@+id/qNumber" />

</RelativeLayout>
